<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.alysondantas.qcarona.ConfigServidor">
    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ip_servidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IP Servidor"
                android:imeActionId="6"
                android:imeActionLabel="IP Servidor"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/btn_conectar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="conectarServidor"
                android:text="Conectar ao Servidor" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>



